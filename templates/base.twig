<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" {% if rtl %}dir="rtl"{% endif %} >
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta name="Description" content="PHP-Addressbook" />
  <meta name="Keywords" content="" />
  {% block meta %}{% endblock %}

  <!-- stylesheets -->
  <link rel="stylesheet" type="text/css" href="style.css"/>
  <style type="text/css">
    body { background-image:url('./skins/header-{{skin_color}}.jpg'); }
    table#maintable th { background:{{skin_mt_color}}; }
    table#birthdays th { background:{{skin_mt_color}}; }
  </style>
  <!--[if !IE]>-->
  <link media="only screen and (max-device-width: 480px)" rel="stylesheet" type="text/css" href="iphone.css"/>
  <!--<![endif]-->
  <meta name="viewport" content="width=320; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;" />

  <!-- javascripts -->
  <script type="text/javascript" src="javascript/index.js"></script>
  <script type="text/javascript" src="3rdparty/js/tablesort.min.js"></script>
  {% block js_includes %}{% endblock %}
  
  <script type="text/javascript">{% block js_commands_top %}{% endblock %}</script>
  
  <link rel="icon" type="image/png" href="{{url_images}}icons/font.png" />
  {% if rtl %}
    <style type="text/css">
      <!--
      /* CSS for right to left */
      label {margin-left:0.5em;float:right;text-align:right;}
      #content,#right,.right {float:left;}
      #nav,#left,.left {float:right;}
      -->
    </style>
  {% endif %}
  
  <title>{% block title %}{% trans "ADDRESS_BOOK" %}{% if group_name %} {{group_name}}{% endif %}:{% endblock %}</title>
</head>
  
<body {% block body_parameters %}{% endblock %}>
  <div id="container">
    <div id="top">
      {% if userlist %}
        <form name="logout" method="post" class="header">
          <input type="hidden" name="logout" value="yes" />
          {% if username %}<b>{{username}}</b> {% endif %}<br/>
          <a href="#" onClick="document.logout.submit();">{% trans "LOGOUT" %}</a>
        </form>
      {% else %}
        <b>({{remote_addr}})</b>
      {% endif %}
    </div>
    
    <div id="header">
      <h1>
        <a href=".">{% trans "ADDRESS_BOOK" %}</a>
      </h1>
      <a href=".">
        <img src="{{url_images}}title_x2.png" width=340 height=75 title="Addressbook" alt="Addressbook" id="logo" />
      </a>
    </div>
    
    <div id="nav">
      {% include "navigation.html" %}
    </div>
    
    <div id="content">
      {% block content %}{% endblock %}
    </div>
        
    <div id="footer">
      <br/>
      <ul>
        <li>
          <a href="http://sourceforge.net/projects/php-addressbook/">php-addressbook</a> 
          <a href="notes.htm">v{{version}}</a>
        </li>
      </ul>
    </div>
  </div>
</body>

<script type="text/javascript">
<!--
  {% block js_commands_bottom %}{% endblock %}
//-->
</script>

